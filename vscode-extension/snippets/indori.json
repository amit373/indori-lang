{
  "Variable Declaration": {
    "prefix": "kaam",
    "body": [
      "kaam ${1:variableName} laa_re ${2:value};"
    ],
    "description": "Declare a variable"
  },
  "Function Declaration": {
    "prefix": "bhiya_ka",
    "body": [
      "bhiya_ka ${1:functionName}() {",
      "  ${2:// body}",
      "}"
    ],
    "description": "Declare a function"
  },
  "If Statement": {
    "prefix": "agar_re",
    "body": [
      "agar_re (${1:condition}) {",
      "  ${2:// code}",
      "}"
    ],
    "description": "If statement"
  },
  "If Else Statement": {
    "prefix": "agar_warna",
    "body": [
      "agar_re (${1:condition}) {",
      "  ${2:// code}",
      "} warna_re {",
      "  ${3:// else code}",
      "}"
    ],
    "description": "If-else statement"
  },
  "While Loop": {
    "prefix": "jabtak_re",
    "body": [
      "jabtak_re (${1:condition}) {",
      "  ${2:// code}",
      "}"
    ],
    "description": "While loop"
  },
  "For Loop": {
    "prefix": "ghuma_re",
    "body": [
      "ghuma_re (${1:init}; ${2:condition}; ${3:update}) {",
      "  ${4:// code}",
      "}"
    ],
    "description": "For loop"
  },
  "Console Log": {
    "prefix": "bhiya_bol",
    "body": [
      "bhiya_bol(${1:message});"
    ],
    "description": "Console log"
  },
  "Array Declaration": {
    "prefix": "jama_re",
    "body": [
      "jama_re ${1:arrayName} = [${2:items}];"
    ],
    "description": "Declare an array"
  },
  "Object Declaration": {
    "prefix": "naksha_re",
    "body": [
      "naksha_re ${1:objectName} = {",
      "  ${2:key}: ${3:value}",
      "};"
    ],
    "description": "Declare an object"
  },
  "Return Statement": {
    "prefix": "de_re",
    "body": [
      "de_re ${1:value};"
    ],
    "description": "Return statement"
  },
  "Try Catch": {
    "prefix": "bhiya_try",
    "body": [
      "bhiya_try {",
      "  ${1:// code}",
      "} bhiya_catch (${2:error}) {",
      "  ${3:// handle error}",
      "}"
    ],
    "description": "Try-catch block"
  },
  "Poha Time": {
    "prefix": "poha_time",
    "body": [
      "poha_time();"
    ],
    "description": "Poha time easter egg!"
  }
}
